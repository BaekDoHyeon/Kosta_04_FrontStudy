  $( function() {
    //1. 아코디언
    $( "#catalogue" ).accordion({
		heightStyle: 'content' //컨텐트에 맞게 어코디언의 높이를 조절하는 옵션
    });
    
    //2. Draggable
    $("#catalogue li").draggable({
		helper: 'clone',
		appendTo: '#cart'
    });
    
  });
  </script>
